<!--  HEADER -->
<header class="video">
    <div class="top sticky">
        <div class="row">
            <div class="small-12 large-3 medium-3 columns">
                <div class="logo">
                    <a href="/" title=""><img src="~/images/logo.png" alt="" title="" /></a>
                </div>
            </div>

            <div class="small-12 large-9 medium-9 columns">
                @{Html.RenderPartial("_Menu");}
            </div>
        </div>
    </div>

    <!-- VIDEO -->
    <div id="video-container">

        <!--  MESSAGES ABOVE HEADER IMAGE -->
        <div class="message">
            <div class="row">
                <div class="small-12 columns">
                    <div class="message-intro">
                        <span class="message-line"></span>
                        <p>Hire expert freelancers for your online job.</p>
                        <span class="message-line"></span>
                    </div>
                    <h1><span id="js-rotating">eWork - PLACE FOR EVERY UNEMPLOYED PERSON</span></h1>
                    <a href="#pricingboxes" class="small radius button">VIEW NEWS</a>
                </div>
            </div>
        </div>
        <!--  END OF MESSAGES ABOVE HEADER IMAGE -->

        <video id='video-player' preload='metadata' autoplay loop>
            <source src="html5video/programming.m4v" type="video/mp4" />
            <source src="html5video/programming.webm" type="video/webm" />
        </video>

        <div class="clouds"><img src="~/images/clouds.png" alt="cloud me" /></div>

    </div>
    <!-- END OF VIDEO -->

</header>
<!-- END OF HEADER --> 


